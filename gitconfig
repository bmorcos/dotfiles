[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  st = status -s
  discard = reset --hard
  subup = submodule update --init --recursive
  delbr = push origin --delete
  fpush = push --force-with-lease

[color]
  branch = auto
  diff = auto
  interactive = auto
  pager = true
  status = auto
  ui = auto

[color "status"]
  added = green bold
  changed = red bold
  untracked = yellow
  unmerged = red reverse

[color "branch"]
  current = green bold
  local = green
  remote = red

[color "diff"]
  meta = cyan bold
  frag = white dim
  old = red bold
  new = green bold
  whitespace = red reverse

[diff]
  mnemonicprefix = True

[rebase]
  autosquash = true

[pull]
  rebase = true

[push]
  default = simple

[fetch]
  prune = true

